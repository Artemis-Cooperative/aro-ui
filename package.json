{
  "name": "aro-ui",
  "version": "0.1.0",
  "description": "Enhanced UI component library with WCAG compliance",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "test": "vitest",
    "lint": "eslint . --ext .js,.astro,.ts,.tsx",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "npm run build-storybook && npx concurrently -k -s first -n \"SB,TEST\" \"npx http-server storybook-static --port 6006 --silent\" \"npx wait-on tcp:6006 && test-storybook --coverage\""
  },
  "dependencies": {
    "astro": "^4.0.3",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.0.3",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.6.6",
    "@storybook/builder-vite": "^7.6.6",
    "@storybook/html": "^7.6.6",
    "@storybook/html-vite": "^7.6.6",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.5",
    "eslint": "^8.55.0",
    "eslint-plugin-astro": "^0.31.0",
    "http-server": "^14.1.1",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-merge-longhand": "^6.0.0",
    "postcss-merge-rules": "^6.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "storybook": "^7.6.6",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  }
}
